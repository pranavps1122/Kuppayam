<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product - Kuppayam</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2563eb;
            --success: #22c55e;
            --border: #e2e8f0;
            --text: #1e293b;
            --background: #f8fafc;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--background);
            color: var(--text);
            line-height: 1.6;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 32px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }

        .form-header {
            margin-bottom: 32px;
            text-align: center;
        }

        .form-header h1 {
            font-size: 28px;
            color: var(--text);
            margin-bottom: 8px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group.full-width {
            grid-column: span 2;
        }

        label {
            display: block;
            font-weight: 500;
            margin-bottom: 8px;
            color: #4b5563;
        }

        input, select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.2s;
            background: var(--background);
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            background: white;
        }

        textarea {
            height: 120px;
            resize: vertical;
        }

        .image-upload-container {
            display: flex;
            gap: 20px;
        }

        .image-upload {
            border: 2px dashed #ccc;
            padding: 20px;
            text-align: center;
            cursor: pointer;
        }

        .image-preview {
            width: 100%;
            height: 100px;
            margin-top: 10px;
            background-color: #f7f7f7;
            border-radius: 4px;
        }

        .cropper-container {
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
         
            z-index: 1000;
            margin-top: -500px;
            margin-left: 50px;
            
        }

        .cropper-content {
           
            padding: 24px;
            border-radius: 12px;
            max-width: 300px;
            margin-left: 100px;
            margin: 0 auto;
           
        }

        .crop-btns {
        
            margin-top: -16px;
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            margin-top: 120px;
        }

        .crop-btn {
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
        }

        .crop-save {
            background: var(--success);
            color: white;
            border: none;
        }

        .crop-cancel {
            background: none;
            border: 1px solid var(--border);
            
        }

        /* Submit button styling */
        .submit-btn {
            background: var(--primary);
            color: white;
            padding: 14px 28px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.2s;
        }

        .submit-btn:hover {
            background: #1d4ed8;
        }

        nav.sidebar {
            width: 250px;
            background-color: #2d3e50;
            color: #fff;
            padding: 20px;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 50px;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            background-color: #2980b9;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            margin-right: 15px;
            font-size: 20px;
            font-weight: bold;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 14px;
            font-size: 16px;
            color: #ecf0f1;
            margin-bottom: 15px;
            border-radius: 6px;
            transition: background-color 0.3s, transform 0.3s ease;
        }

        .menu-item:hover, .menu-item.active {
            background-color: #2980b9;
        }

        .menu-icon {
            margin-right: 10px;
            font-size: 20px;
        }

        /* Main Content Styling */
        .main-content {
            margin-left: 260px;
            width: calc(100% - 260px);
            padding: 30px;
        }

        a{
            text-decoration: none;
        }
        @media (max-width: 640px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .form-group.full-width {
                grid-column: auto;
            }

            .container {
                padding: 20px;
                margin: 20px;
            }
        }
        .size-quantity-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 16px;
    }

    .size-quantity {
        display: flex;
        flex-direction: column;
        align-items: start;
    }

    .size-quantity input {
        width: 100%;
        padding: 8px;
        border: 1px solid var(--border);
        border-radius: 8px;
        font-size: 14px;
        background: var(--background);
    }

    .size-quantity input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    .size-quantity label {
        margin-bottom: 4px;
        font-weight: 500;
        color: #4b5563;
    }

    </style>
        <%-include('../../views/partials/admin/header')%>
</head>

<body>
    
    <nav class="sidebar" aria-label="Sidebar Navigation">
        <div class="user-info">
            <div class="user-avatar" aria-label="Admin">A</div>
            <span>Admin</span>
        </div>
        <a href="/admin" class="menu-item">
            <span class="menu-icon">ðŸ“Š</span> Dashboard
        </a>
        <a href="/admin/products" class="menu-item active">
            <span class="menu-icon">ðŸ“¦</span> Products
        </a>
        <a href="/admin/category" class="menu-item">
            <span class="menu-icon">ðŸ“‘</span> Category
        </a>

        <a href="/admin/customers" class="menu-item">
            <span class="menu-icon">ðŸ‘¥</span> Users
        </a>
    </nav>

  
    <div class="container">
    
        <div class="form-header">
            <h1 style="color: red; font-size: 600px;"><% message %></h1>
            <h1>Add New Product</h1>
            <p>Fill in the product details below</p>
        </div>
        
        <form action="/admin/addProduct" method="POST" enctype="multipart/form-data">
            <div class="form-grid">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="productName">
                </div>

                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="">Select Category</option>
                        <% category.forEach(category => { %>
                            <option value="<%= category._id %>"><%= category.categoryName %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="salePrice">Price</label>
                    <input type="number" id="Price" name="Price" min="0" step="0.01">
                </div>

                <div class="form-group full-width">
                    <label for="sizes">Sizes & Stock</label>
                    <div class="size-quantity-grid">
                        <div class="size-quantity">
                            <label for="size-s">Size S</label>
                            <input type="number" id="size-s" name="size_s" min="0" placeholder="Qty for S">
                        </div>
                        <div class="size-quantity">
                            <label for="size-m">Size M</label>
                            <input type="number" id="size-m" name="size_m" min="0" placeholder="Qty for M">
                        </div>
                        <div class="size-quantity">
                            <label for="size-l">Size L</label>
                            <input type="number" id="size-l" name="size_l" min="0" placeholder="Qty for L">
                        </div>
                        <div class="size-quantity">
                            <label for="size-xl">Size XL</label>
                            <input type="number" id="size-xl" name="size_xl" min="0" placeholder="Qty for XL">
                        </div>
                    </div>
                </div>
                
                
                <div class="form-group full-width">
                    <label for="description">Description</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <div class="form-group full-width">
                    <label>Product Images</label>
                    <div class="image-upload-container">
                        <!-- Image Upload 1 -->
                        <div class="image-upload" onclick="document.getElementById('productImage1').click()">
                            <input type="file" id="productImage1" name="images" accept="image/*" required style="display: none;" onchange="previewImage(this, 'imagePreview1')">
                            <p>Click to upload Image 1</p>
                            <div class="image-preview" id="imagePreview1"></div>
                        </div>
                
                        <!-- Image Upload 2 -->
                        <div class="image-upload" onclick="document.getElementById('productImage2').click()">
                            <input type="file" id="productImage2" name="images" accept="image/*" style="display: none;" onchange="previewImage(this, 'imagePreview2')">
                            <p>Click to upload Image 2</p>
                            <div class="image-preview" id="imagePreview2"></div>
                        </div>
                
                        <!-- Image Upload 3 -->
                        <div class="image-upload" onclick="document.getElementById('productImage3').click()">
                            <input type="file" id="productImage3" name="images" accept="image/*" style="display: none;" onchange="previewImage(this, 'imagePreview3')">
                            <p>Click to upload Image 3</p>
                            <div class="image-preview" id="imagePreview3"></div>
                        </div>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <div class="form-group full-width">
                    <button type="submit" class="submit-btn">Add Product</button>
                </div>
            </div>
        </form>
    </div>

    <div class="cropper-container" id="cropperModal">
        <div class="cropper-content">
            <img id="cropperImage" style="max-width: 100%">
            <div class="crop-btns">
                <button class="crop-btn crop-cancel" onclick="closeCropper()">Cancel</button>
                <button class="crop-btn crop-save" onclick="saveCrop()">Save Crop</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/cropperjs@1.5.12/dist/cropper.min.js"></script>
  
    <script>

    

        
        let cropper;
        let currentInput;
        let currentPreviewId;

        function previewImage(input, previewId) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById(previewId).style.backgroundImage = `url(${e.target.result})`;
                    openCropper(e.target.result, previewId);
                };
                reader.readAsDataURL(file);
            }
        }

        function openCropper(imageUrl, previewId) {
            const image = document.getElementById('cropperImage');
            image.src = imageUrl;

            const cropperModal = document.getElementById('cropperModal');
            cropperModal.style.display = 'flex';

            if (cropper) cropper.destroy();

            cropper = new Cropper(image, {
                aspectRatio: 1,
                viewMode: 1,
                autoCropArea: 0.5,
                responsive: true,
                cropBoxResizable: true
            });

            currentPreviewId = previewId;
        }

        function closeCropper() {
            const cropperModal = document.getElementById('cropperModal');
            cropperModal.style.display = 'none';
            if (cropper) cropper.destroy();
            cropper = null;
        }

        function saveCrop() {
            if (cropper) {
                const canvas = cropper.getCroppedCanvas();
                const croppedImageUrl = canvas.toDataURL('image/png');

                document.getElementById(currentPreviewId).style.backgroundImage = `url(${croppedImageUrl})`;
                closeCropper();
            }
        }

        document.querySelectorAll('.image-upload').forEach((elem, index) => {
            elem.addEventListener('click', () => {
                currentInput = document.getElementById(`productImage${index + 1}`);
            });
        });

                <% if (message) { %>

        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                title: 'Error',
                text: '<%= message %>',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });

        <% } %>


    </script>
</body>
</html>
