<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kuppayam</title>
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" href="/path/to/your/favicon.ico" type="image/x-icon">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #f8f9fa;
            padding: 10px 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 500;
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            color: #000;
        }

        .nav-links {
            display: flex;
            gap: 15px;
        }

        .nav-links a {
            text-decoration: none;
            color: #000;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #007BFF;
        }

        .navbar-icons {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .icon-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: black;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .icon-link:hover {
            color: #007BFF;
        }

        .icon {
            font-size: 17px;
            margin-bottom: 2px;
        }

        .icon-name {
            font-size: 14px;
        }

        .login-button {
            padding: 5px 15px;
            font-size: 14px;
            color: white;
            background-color: #2d3b49;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .login-button:hover {
            background-color: #2d3b49;
            transform: scale(1.05);
        }

        .login-button:active {
            background-color: #2d3b49;
            transform: scale(1);
        }

        /* Mobile menu toggle */
        .menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: #000;
        }

        /* Responsive styles */
        @media screen and (max-width: 768px) {
            .nav-container {
                flex-wrap: wrap;
            }

            .menu-toggle {
                display: block;
                order: 3;
            }

            .logo {
                flex: 1;
            }

            .navbar-icons {
                order: 2;
            }

            .nav-links {
                flex-basis: 100%;
                flex-direction: column;
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.3s ease-out;
                order: 4;
            }

            .nav-links.active {
                max-height: 200px;
            }

            .nav-links a {
                padding: 8px 0;
                display: block;
            }

            .icon-name {
                display: none;
            }

            .icon-link {
                font-size: 20px;
            }

            .navbar-icons {
                gap: 15px;
            }
        }

        @media screen and (max-width: 480px) {
            .logo {
                font-size: 16px;
            }

            .header {
                padding: 10px;
            }

            .navbar-icons {
                gap: 10px;
            }

            .login-button {
                padding: 5px 10px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <nav class="nav-container">
            <a href="/" style="text-decoration: none;"><div class="logo">KUPPAYAM.ONLINE</div></a>
            <div class="nav-links" id="navLinks">
                <a href="/">Home</a>
                <a href="/Shop">Shop</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
            </div>
            
            <div class="navbar-icons">
             
                <% if (locals.session.isAuth) { %>
                    <a href="/profile" class="icon-link" title="Profile">
                        <div class="icon"><i class="fas fa-user"></i></div>
                        <span class="icon-name">Profile</span>
                    </a>
                    <a href="/wishlist" class="icon-link" title="Wishlist">
                        <div class="icon"><i class="fas fa-heart"></i></div>
                        <span class="icon-name">Wishlist</span>
                    </a>
                    <a href="/cart" class="icon-link" title="Cart">
                        <div class="icon"><i class="fas fa-shopping-cart"></i></div>
                        <span class="icon-name">Cart</span>
                    </a>
                <% } else { %>
                    <a href="/login" class="login-button" title="Login">
                        Login
                    </a>
                <% } %>
            </div>
            
            <button class="menu-toggle" id="menuToggle">
                <i class="fas fa-bars"></i>
            </button>
            
          
        </nav>
    </header>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menuToggle');
            const navLinks = document.getElementById('navLinks');
            
            menuToggle.addEventListener('click', function() {
                navLinks.classList.toggle('active');
                // Change icon based on menu state
                const icon = menuToggle.querySelector('i');
                if (navLinks.classList.contains('active')) {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                } else {
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
            
            // Close menu when window is resized beyond mobile breakpoint
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    navLinks.classList.remove('active');
                    const icon = menuToggle.querySelector('i');
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        });
    </script>
</body>
</html>