<style>
    :root {
        --sidebar-width: 240px;
        --header-height: 70px;
        --accent-color: #4f46e5;
        --hover-color: #818cf8;
    }

    .page-container {
        display: flex;
        padding-top: var(--header-height);
    }

    .sidebar {
        margin-top: 35px;
        width: var(--sidebar-width);
        position: absolute;
        top: var(--header-height);
        left: 0;
        background: white;
        box-shadow: 2px 0 4px rgba(0, 0, 0, 0.1);
        z-index: 40;
        border-radius: 10px;
        
    }

    .sidebar-content {
        padding: 1.75rem;
    }

    .main-content {
        margin-left: var(--sidebar-width);
        padding: 2rem;
        width: calc(100% - var(--sidebar-width));
        margin-top: -120px;
    }

    .sidebar-profile {
        text-align: center;
        margin-bottom: 2rem;
    }

    .profile-avatar {
        width: 70px;
        height: 70px;
        margin: 0 auto 1rem;
        border-radius: 50%;
        background: var(--accent-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .sidebar-profile h2 {
        font-size: 1.15rem;
        margin: 0;
    }

    .sidebar-profile p {
        color: #666;
        font-size: 0.95rem;
        margin-top: 0.4rem;
    }

    .sidebar-nav {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 0.9rem 1.1rem;
        color: #333;
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.2s;
        font-size: 1rem;
    }

    .nav-item i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
        font-size: 1.1rem;
    }

    .nav-item:hover {
        background: #f3f4f6;
        color: var(--accent-color);
    }

    .nav-item.active {
        background: var(--accent-color);
        color: white;
    }

    @media (max-width: 768px) {
        .sidebar {
            position: relative;
            top: 0;
            width: 100%;
        }

        .main-content {
            margin-left: 0;
            padding: 1rem;
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Remove any duplicate sidebars
        const sidebars = document.querySelectorAll('.sidebar');
        if (sidebars.length > 1) {
            for (let i = 1; i < sidebars.length; i++) {
                sidebars[i].remove();
            }
        }

        // Prevent any scrolling on the sidebar
        const sidebar = document.querySelector('.sidebar');
        sidebar.addEventListener('wheel', function(e) {
            e.preventDefault();
        });
        sidebar.addEventListener('touchmove', function(e) {
            e.preventDefault();
        }, { passive: false });
    });
</script>