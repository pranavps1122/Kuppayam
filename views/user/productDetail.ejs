    <%-include('../../views/partials/user/header')%>
      
   
    <div class="breadcrumbs">
        <a href="/">Home</a> > 
        <a href="/productDetail/<%= product._id %>/<%= product.category._id || product.category %>">View Product</a>
        <span><%= product.productName %></span>
    </div>

    <div class="container page-animation">
      
        <div class="product-grid1">
         
            <div class="thumbnail-column">
                <% product.productImage.forEach((image, index) => { %>
                    <img 
                        src="/<%= image %>" 
                        alt="<%= product.productName %> view <%= index + 1 %>"
                        class="thumbnail"
                        onclick="changeImage(this, '/<%= image %>')"
                    >
                <% }); %>
            </div>

            <div class="main-image-container">
                <img 
                    src="/<%= product.productImage[0] %>" 
                    alt="<%= product.productName %>"
                    class="main-image zoom"
                    id="mainImage"
                    onmouseover="zoomIn(this)"
                    onmouseleave="zoomOut(this)"
                >
            </div>

           
            <div class="product-info">
              
                <h1 class="product-title"><%= product.productName %></h1>
                <div class="price-section">
                    <% if (product.discountAmount > 0 || categories.discountAmount) { %>
                        <span class="current-price">₹<%= product.finalPrice || categories.finalPrice || product.Price %></span>
                
                        <span class="original-price" style="text-decoration: line-through; color: #999;">
                            ₹<%= product.Price %>
                        </span>
                
                        <span class="discount-percent" style="color: #e74c3c; margin-left: 10px;">
                            (<%= product.discountPercentage || categories.discountPercentage %>% OFF)
                        </span>
                
                        <div class="total-savings" style="color: #2ecc71; margin-top: 5px;">
                            You Save: ₹<%= product.Price - (product.finalPrice || categories.finalPrice) %>
                        </div>
                    <% } else { %>
                        <span class="current-price">₹<%= product.Price %></span>
                    <% } %>
                </div>
       
               <h3>Description</h2>
                <p><%= product.description %></p>
            
             
                <form class="size-options" method="POST" action="/cart/<%= product._id %>/<%= product.category._id %>">
                    <div>Size</div>
                    <div class="size-selector">
                        <% ['S', 'M', 'L', 'XL'].forEach(size => { %>
                            <label>
                                <input 
                                    type="radio" 
                                    name="size" 
                                    value="<%= size %>" 
                                    <%= size === 'M' ? 'checked' : '' %>
                                    class="hidden-radio"
                                    id="<%= size %>"
                                />
                                <span 
                                    class="size-button <%= size === 'M' ? 'selected' : '' %>" 
                                    onclick="selectSize(this)"
                                ><%= size %></span>
                            </label>
                        <% }); %>
                    </div>
                
                    <button type="submit" class="add-to-cart">Add to Cart</button>
                </form>
                
                <form method="POST" action="/wishlist/<%= product._id %>" style="display: inline;">
                  
                    <input type="hidden" id="wishlist-size" name="size" value="M">
                    
                    <button style="background-color: black; color: white; width: 120px; height: 30px;" type="submit" class="add-to-wishlist">
                        <%= product.isInWishlist ? 'Remove from Wishlist' : 'Add to Wishlist' %>
                    </button>
                </form>
                
      
                <div class="reviews-grid">
                    <% if (product.reviews && product.reviews.length > 0) { %>
                        <% product.reviews.forEach(review => { %>
                            <div class="review">
                                <div class="reviewer">
                                    <span><%= review.userName %></span>
                                    <span class="verified-badge">✓ Verified Purchase</span>
                                </div>
                                <div class="review-stars">
                                    <%= '★'.repeat(review.rating) %>
                                    <%= '☆'.repeat(5-review.rating) %>
                                </div>
                                <p><%= review.comment %></p>
                                <div class="review-date">Posted on <%= review.date %></div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            
        </div>

      
        <section class="related-products">
            
            <h2>YOU MIGHT ALSO LIKE</h2>
            <div class="related-grid">
                <% relatedProducts.forEach(products => { %>
                  
                    <div class="related-product">
                        <a href="/productDetail/<%= products._id %>/<%= products.category._id %>">
                            <img src="/<%= products.productImage[0] %>" alt="<%= products.productName %>">
                        </a>
                       
                        <h3><%= products.productName %></h3>
                        <div class="price-section">
                            
                            <% if (product.discountAmount > 0 || categories.discountAmount) { %>
          
                                <span class="original-price" style="text-decoration: line-through; color: #999;">
                                    ₹<%= products.Price %>
                                </span>
                                <span class="discount-percent" style="color: #e74c3c; margin-left: 10px;">
                                    (<%= product.discountPercentage || categories.discountPercentage %>% OFF)
                                </span>
                                
                            <% } else { %>
                                <span class="current-price">₹<%= product.Price %></span>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>




       
    </div>

    <script>
        function changeImage(thumb, src) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(t => 
                t.style.border = t === thumb ? '2px solid black' : '1px solid #eee'
            );
        }

        function selectColor(dot) {
            document.querySelectorAll('.color-dot').forEach(d => 
                d.style.border = d === dot ? '2px solid black' : '1px solid #ddd'
            );
        }

        function selectSize(button) {
  
    document.querySelectorAll('.size-button').forEach(b => 
        b.classList.remove('selected')
    );
    

    button.classList.add('selected');

 
    var selectedSize = button.innerText;

   
    document.getElementById('wishlist-size').value = selectedSize;
}


        function zoomIn(image) {
            image.classList.add('zoomed');
        }

        function zoomOut(image) {
            image.classList.remove('zoomed');


            
        }
      
            
    </script>

    <script>
        const searchInput = document.getElementById('searchInput');
        const clearButton = document.getElementById('clearSearch');

        searchInput.addEventListener('input', function() {
            clearButton.style.display = this.value ? 'block' : 'none';
        });

        function clearSearch() {
            searchInput.value = '';
            clearButton.style.display = 'none';
            searchInput.focus();
 
            if (searchInput.form) {
                searchInput.form.submit();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            clearButton.style.display = searchInput.value ? 'block' : 'none';
        });
    </script>
