    <style>
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto;
        }

    

        .body {
        max-width: 100%;
        overflow-x: hidden;
    }

        .logo {
            font-weight: bold;
            font-size: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px 40px;
        }

        /* Product Layout */
        .product-grid1 {
            display: grid;
            grid-template-columns: 150px 1fr 1fr;
            gap: 20px;
            margin-bottom: 40px;
        }
   


        /* Thumbnail Column */
        .thumbnail-column {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .thumbnail {
            width: 100px;
            height: 120px;
            object-fit: cover;
            cursor: pointer;
            border: 1px solid #eee;
        }

        /* Main Image */
        .main-image-container {
            position: relative;
            width: 80%;
            max-width: 50px;
            height: auto;
        }

        .main-image {
            width: 769%;
            height: 80%;
            object-fit: contain;
        }

        /* Zoom Effect */
        .zoom {
            transition: transform 0.3s ease;
            cursor: zoom-in;
        }

        .zoomed {
            transform: scale(1.25);
            cursor: zoom-out;
        }

        /* Product Info */
        .product-info {
            padding: 0 20px;
        }

        .wishlist-icon {
            float: right;
            cursor: pointer;
        }

        .product-title {
            font-size: 20px;
            margin-bottom: 15px;
        }

        .price-section {
            margin: 15px 0;
        }

        .current-price {
            font-size: 20px;
            font-weight: 500;
        }

        .original-price {
            color: #666;
            text-decoration: line-through;
            margin-left: 10px;
        }

        /* Color Options */
        .color-options {
            margin: 20px 0;
        }

        .color-dots {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .color-dot {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            border: 1px solid #ddd;
            cursor: pointer;
        }

        /* Size Options */
        .size-options {
            margin: 20px 0;
        }

        .size-selector {
            margin-top: 10px;
            display: flex;
            gap: 10px;
        }

        .size-button {
            padding: 8px 16px;
            border: 1px solid #ddd;
            background: white;
            cursor: pointer;
        }

        .size-button.selected {
            border-color: #000;
            background: #000;
            color: white;
        }

        /* Add to Cart */
        .add-to-cart {
            width: 100%;
            padding: 15px;
            background: #000;
            color: white;
            border: none;
            cursor: pointer;
            margin: 20px 0;
        }

        /* Tabs */
        .tabs {
            border-bottom: 1px solid #ddd;
            margin: 40px 0 20px;
            display: flex;
            gap: 30px;
        }

        .tab {
            padding: 10px 0;
            cursor: pointer;
            border: none;
            background: none;
            position: relative;
        }

        .tab.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #000;
        }

        /* Reviews */
        .reviews-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-top: 20px;
        }

        .review {
            margin-bottom: 20px;
        }

        .reviewer {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .review-stars {
            color: #FFD700;
        }

        .verified-badge {
            color: #00a65a;
            font-size: 14px;
        }

        .review-date {
            color: #666;
            font-size: 14px;
            margin-top: 2px;
        }

        /* Related Products */
        .related-products {
            margin: 50px 0;
            padding-top: 10px;
        }

        .related-products h2 {
            margin-bottom: 20px;
        }

        .related-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: -15px;
    padding-top: 10px;
}

.related-product {
    text-align: center;
    padding-top: 20px;
}

.related-product img {
    width: 83%;
    height: 84%; /* Reduced from 89% to 70% */
    object-fit: cover;
}

        /* Newsletter */
        .newsletter {
            background: #000;
            color: white;
           
            text-align: center;
            margin: 40px 0;
        }

        /* Footer */
        .footer {
            background: #f9f9f9;
            padding: 40px;
            width: 100%;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-column h3 {
            margin-bottom: 15px;
            font-size: 16px;
        }

        .footer-column ul {
            list-style: none;
        }

        .footer-column ul li {
            margin-bottom: 8px;
        }

        .footer-column ul li a {
            color: #666;
            text-decoration: none;
            font-size: 14px;
        }

        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: 1fr;
            }

            .thumbnail-column {
                flex-direction: row;
                overflow-x: auto;
            }

            .reviews-grid,
            .related-grid,
            .footer-grid {
                grid-template-columns: 1fr;
            }
        }
