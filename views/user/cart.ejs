<%- include('../../views/partials/user/header') %>

<style>
/* Enhanced Shopping Cart Styles */
body {
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
}

.cart-container {
    max-width: 1200px;
    margin: 40px auto;
    background-color: transparent;
    position: relative;
}

/* Cart Header */
.cart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 0 20px 0;
    border-bottom: 2px solid #e9ecef;
    margin-bottom: 25px;
}

.cart-title {
    font-size: 32px;
    font-weight: 700;
    color: #212529;
    position: relative;
    display: inline-block;
}

.cart-title:after {
    content: '';
    position: absolute;
    width: 60px;
    height: 3px;
    background-color: #4361ee;
    bottom: -8px;
    left: 0;
}

.price-text {
    text-align: right;
    color: #6c757d;
    font-size: 16px;
    font-weight: 500;
}

/* Cart Content */
.cart-content {
    display: flex;
    gap: 25px;
    flex-wrap: wrap;
}

/* Left Section - Items */
.cart-items-section {
    flex: 1;
    min-width: 300px;
    background-color: #fff;
    border-radius: 16px;
    padding: 25px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.cart-items-section:hover {
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    transform: translateY(-5px);
}

.section-header {
    padding-bottom: 15px;
    border-bottom: 1px solid #e9ecef;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
}

.select-all {
    font-size: 14px;
    color: #4361ee;
    cursor: pointer;
    transition: color 0.2s;
    font-weight: 500;
}

.select-all:hover {
    color: #3a4cb4;
    text-decoration: underline;
}

.cart-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.cart-item {
    display: grid;
    grid-template-columns: 130px 1fr auto;
    gap: 20px;
    padding: 20px;
    border-radius: 12px;
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.cart-item:hover {
    transform: translateX(5px);
    border-color: #4361ee;
    box-shadow: 0 5px 15px rgba(67, 97, 238, 0.1);
}

.cart-item:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background-color: #4361ee;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.cart-item:hover:before {
    opacity: 1;
}

.item-image {
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    height: 25vh;
}

.item-image img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.cart-item:hover .item-image img {
    transform: scale(1.05);
}

.item-details h3 {
    font-size: 18px;
    font-weight: 600;
    color: #212529;
    margin-bottom: 10px;
    transition: color 0.2s;
}

.cart-item:hover .item-details h3 {
    color: #4361ee;
}

.item-details a {
    color: #4361ee;
    text-decoration: none;
    transition: color 0.2s;
}

.item-details a:hover {
    color: #3a4cb4;
    text-decoration: underline;
}

.in-stock {
    color: #28a745;
    font-size: 13px;
    margin: 8px 0;
    display: inline-block;
    padding: 2px 8px;
    background-color: rgba(40, 167, 69, 0.1);
    border-radius: 20px;
    font-weight: 500;
}

.free-shipping {
    font-size: 13px;
    color: #6c757d;
    display: inline-block;
    margin-left: 10px;
}

.item-size {
    margin: 10px 0;
    font-size: 14px;
    color: #495057;
}

.item-actions {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 180px;
}

.price-display {
    font-size: 20px;
    font-weight: 700;
    color: #212529;
    text-align: right;
}

.original-price {
    font-size: 14px;
    color: #6c757d;
    text-decoration: line-through;
    text-align: right;
}

.discount-badge {
    display: inline-block;
    padding: 3px 8px;
    background-color: #dc3545;
    color: white;
    font-size: 12px;
    border-radius: 20px;
    margin: 5px 0;
    text-align: right;
    float: right;
    font-weight: 600;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% {
        box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4);
    }
    70% {
        box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
    }
    100% {
        box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
    }
}

.quantity-actions {
    display: flex;
    align-items: center;
    border: 1px solid #ced4da;
    border-radius: 30px;
    overflow: hidden;
    width: fit-content;
    margin-top: 15px;
    transition: all 0.3s ease;
}

.quantity-actions:hover {
    border-color: #4361ee;
}

.quantity-btn {
    width: 35px;
    height: 35px;
    border: none;
    background-color: #f8f9fa;
    cursor: pointer;
    font-size: 18px;
    transition: all 0.2s;
    color: #212529;
}

.quantity-btn:hover {
    background-color: #4361ee;
    color: white;
}

.quantity-display {
    width: 40px;
    text-align: center;
    font-size: 16px;
    font-weight: 600;
}

.item-actions-row {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: flex-start;
    margin-top: 15px;
}

.action-btn {
    background: none;
    border: none;
    color: #4361ee;
    font-size: 14px;
    cursor: pointer;
    padding: 0;
    transition: color 0.2s;
    position: relative;
}

.action-btn:after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #4361ee;
    transition: width 0.3s;
}

.action-btn:hover:after {
    width: 100%;
}

.divider {
    color: #dee2e6;
}

/* Right Section - Summary */
.cart-summary-section {
    width: 320px;
    background-color: #fff;
    border-radius: 16px;
    padding: 25px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    align-self: flex-start;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.cart-summary-section:hover {
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
}

.cart-summary-section:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #4361ee, #3a86ff);
}

.summary-total {
    font-size: 18px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e9ecef;
    font-weight: 500;
}

.summary-total strong {
    font-size: 22px;
    color: #212529;
}

.checkout-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(90deg, #4361ee, #3a86ff);
    border: none;
    border-radius: 30px;
    font-size: 16px;
    font-weight: 600;
    color: white;
    cursor: pointer;
    margin-bottom: 15px;
    box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.checkout-btn:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: all 0.5s;
}

.checkout-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
}

.checkout-btn:hover:before {
    left: 100%;
}

.delivery-options {
    margin-top: 20px;
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 12px;
}

.delivery-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #212529;
}

.delivery-address {
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 8px;
}

.change-address {
    font-size: 14px;
    color: #4361ee;
    cursor: pointer;
    text-decoration: none;
    transition: color 0.2s;
    position: relative;
    display: inline-block;
}

.change-address:after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #4361ee;
    transition: width 0.3s;
}

.change-address:hover:after {
    width: 100%;
}

/* Empty Cart Style */
.empty-cart {
    background-color: #fff;
    border-radius: 16px;
    padding: 40px;
    text-align: center;
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    position: relative;
    overflow: hidden;
}

.empty-cart:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #4361ee, #3a86ff);
}

.empty-cart h2 {
    font-size: 28px;
    margin-bottom: 15px;
    font-weight: 600;
    color: #212529;
}

.empty-cart p {
    color: #6c757d;
    margin-bottom: 25px;
    font-size: 16px;
}

.continue-shopping {
    display: inline-block;
    padding: 12px 25px;
    background: linear-gradient(90deg, #4361ee, #3a86ff);
    border: none;
    border-radius: 30px;
    text-decoration: none;
    color: white;
    font-size: 16px;
    font-weight: 600;
    box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.continue-shopping:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: all 0.5s;
}

.continue-shopping:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
}

.continue-shopping:hover:before {
    left: 100%;
}

/* Subtotal highlight in cart items section */
.cart-subtotal {
    text-align: right;
    padding-top: 20px;
    margin-top: 15px;
    border-top: 1px solid #e9ecef;
    font-size: 18px;
    font-weight: 600;
    color: #212529;
    transition: all 0.3s ease;
}

.cart-subtotal span {
    color: #4361ee;
    font-size: 22px;
    margin-left: 5px;
}

/* Responsive */
@media (max-width: 768px) {
    .cart-content {
        flex-direction: column;
    }
    
    .cart-summary-section {
        width: 100%;
        margin-top: 25px;
    }
    
    .cart-item {
        grid-template-columns: 100px 1fr;
    }
    
    .item-actions {
        grid-column: span 2;
    }
    
    .price-display {
        text-align: left;
    }
    
    .original-price,
    .discount-badge {
        text-align: left;
        float: none;
    }
}

/* Animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.page-animation {
    animation: fadeIn 0.6s ease-out forwards;
}

.cart-item {
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: calc(0.1s * var(--item-index, 0));
    opacity: 0;
}

/* Custom scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: #adb5bd;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: #4361ee;
}
