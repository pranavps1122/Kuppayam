</style>

<div class="cart-container page-animation">
  <div class="cart-header">
    <h1 class="cart-title">Shopping Cart</h1>
    
  </div>

  <% if (cart && cart.item && cart.item.length > 0) { %>
    <div class="cart-content">
      <!-- Left Section: Cart Items -->
      <div class="cart-items-section">
        <div class="section-header">
          <div class="select-all">Your items</div>
         
        </div>

        <div class="cart-items">
          <% cart.item.forEach((item, index) => { %>
            <div class="cart-item" style="--item-index: <%= index %>">
              <div class="item-image">
                <% if (item.productId) { %>
                  <img src="/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>">
                <% } else { %>
                  <p>Product not available</p>
                <% } %>
              </div>
              
              <div class="item-details">
                <% if (item.productId) { %>
                  <h3><%= item.productId.productName %></h3>
                  <span class="in-stock">In Stock</span>
                  <span class="free-shipping">Eligible for FREE Shipping</span>
                  
                  <div class="item-size">Size: <strong><%= item.size %></strong></div>
                  
                  <div class="quantity-actions">
                    <form action="/updatequantity" method="POST" class="quantity-form">
                      <input type="hidden" name="itemId" value="<%= item._id %>">
                      <input type="hidden" name="action" value="decrease">
                      <button type="submit" class="quantity-btn decrease" <%= item.quantity <= 1 ? 'disabled' : '' %>>
                        <span>−</span>
                      </button>
                    </form>
                    
                    <span class="quantity-display"><%= item.quantity %></span>
                    
                    <form action="/updatequantity" method="POST" class="quantity-form">
                      <input type="hidden" name="itemId" value="<%= item._id %>">
                      <input type="hidden" name="action" value="increase">
                      <button type="submit" class="quantity-btn increase">
                        <span>+</span>
                      </button>
                    </form>
                  </div>
                  
                  <div class="item-actions-row">
                    <a href="/removeproduct/<%= item._id %>" class="action-btn">Delete</a>

                  </div>
                <% } else { %>
                  <h3>Unknown Product</h3>
                <% } %>
              </div>
              
              <div class="item-actions">
                <% if (item.productId) { %>
                  <% if (item.discountInfo && item.discountInfo.discountPercentage > 0) { %>
                    <div class="price-display">₹<%= item.price * item.quantity %></div>
                    <div class="original-price">₹<%= item.discountInfo.originalPrice * item.quantity %></div>
                    <div class="discount-badge">
                      Save <%= item.discountInfo.discountPercentage %>%
                    </div>
                  <% } else { %>
                    <div class="price-display">₹<%= item.price * item.quantity %></div>
                  <% } %>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
        
        <div class="cart-subtotal">
          Subtotal (<%= cart.item.reduce((total, item) => total + item.quantity, 0) %> items): 
          <span>₹<%= cart.cartTotal %></span>
        </div>
      </div>
      
      <!-- Right Section: Order Summary -->
      <div class="cart-summary-section">
        <div class="summary-total">
          Subtotal (<%= cart.item.reduce((total, item) => total + item.quantity, 0) %> items): <strong>₹<%= cart.cartTotal %></strong>
        </div>
        
        <a href="/Checkout">
          <button class="checkout-btn">Proceed to Buy</button>
        </a>
        
        <div class="delivery-options">
          <div class="delivery-title">Deliver to:</div>
          <div class="delivery-address">Your default shipping address</div>
          <a href="/address" class="change-address">Update location</a>
        </div>
      </div>
    </div>
    <div class="policy-container">
        <div class="policy-card">
            <div class="policy-icon">
                <i class="fas fa-undo-alt"></i>
            </div>
            <div class="policy-content">
                <h3>7-Day Return Policy</h3>
                <p>Not satisfied? Return any item within 7 days for a full refund.</p>
            </div>
        </div>
        
        <div class="policy-card">
            <div class="policy-icon">
                <i class="fas fa-shipping-fast"></i>
            </div>
            <div class="policy-content">
                <h3>Secure Fast Delivery</h3>
                <p>Get your order delivered safely within 24-48 hours.</p>
            </div>
        </div>
        
        <div class="policy-card">
            <div class="policy-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="policy-content">
                <h3>Secure Payment</h3>
                <p>Shop with confidence using our encrypted payment system.</p>
            </div>
        </div>
    </div>
  <% } else { %>
    <div class="empty-cart">
      <h2>Your Cart is empty</h2>
      <p>Looks like you haven't added anything to your cart yet. Explore our products and find something you'll love!</p>
      <a href="/" class="continue-shopping">Continue Shopping</a>
    </div>
  <% } %>
</div>



<!-- Load jQuery and SweetAlert -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  $(document).ready(function () {
    
    $('.cart-item').each(function(index) {
      $(this).css('--item-index', index);
    });
    
    $(".quantity-form").on("submit", function (event) {
      event.preventDefault(); 

      var form = $(this);
      $.post(form.attr("action"), form.serialize(), function (data) {
        if (data.success) {
          location.reload();
        } else {
          Swal.fire({
            title: 'Error',
            text: data.message || 'Unknown error occurred.',
            icon: 'error',
            confirmButtonText: 'OK'
          });
        }
      }).fail(function (xhr) {
        Swal.fire({
          text: xhr.responseJSON?.message || 'Something went wrong!',
          icon: 'error',
          confirmButtonText: 'OK',
          toast: true,
          position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true
        });
      });
    });

    // Show SweetAlert for server-side messages
    <% if (message && message.length > 0) { %>
      Swal.fire({
        text: '<%= message.replace(/'/g, "\\'").replace(/"/g, '\\"') %>',
        icon: 'error',
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true
      });
    <% } %>
  });
</script>

