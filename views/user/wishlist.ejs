<%- include('../../views/partials/user/header') %>

<style>
    .wishlist-container {
        padding: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .wishlist-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-left: 1rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        padding: 0 1rem;
    }

    .wishlist-item {
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        border-radius: 6px;
        overflow: hidden;
        transition: 0.2s;
        height: 100%;
        background: white;
    }

    .wishlist-item:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .wishlist-item img {
        width: 100%;

      
        height: 405px;

        object-fit: cover;
    }

    .card-body {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        margin: 0;
        color: #666;
        font-weight: 500;
    }

    .button-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

    .button-group .btn {
        padding: 0.5rem;
        font-size: 0.9rem;
        border: none;
        background-color: #000;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        transition: 0.2s;
        text-align: center;
    }

    .button-group .btn:hover {
        background-color: #333;
    }

    .empty-wishlist {
        text-align: center;
        padding: 3rem 1.5rem;
        background: white;
        border-radius: 8px;
        margin: 1rem;
    }

    .empty-wishlist img {
        width: 120px;
        margin-bottom: 1rem;
    }

    .empty-wishlist h3 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        color: #333;
    }

    .empty-wishlist p {
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        color: #666;
    }

    .empty-wishlist .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #000;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: 0.2s;
    }

    .empty-wishlist .btn:hover {
        background: #333;
    }

    @media (max-width: 768px) {
        .wishlist-container {
            padding: 1rem;
        }
        
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
            padding: 0 0.5rem;
        }

        .wishlist-item img {
            height: 180px;
        }
    }
    @keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.page-animation {
    animation: fadeIn 0.5s ease-out forwards;
}
</style>

<div class="container-fluid">
    <div class="wishlist-container page-animation">
        <h1 class="wishlist-title">My Wishlist</h1>

        <% if (wishlistItems && wishlistItems.length > 0) { %>
            <div class="products-grid">
                <% wishlistItems.forEach(item => { %>
                    <div class="wishlist-item">
                        <img src="/<%= item.product && item.product.productImage ? item.product.productImage[0] : 'default-image.jpg' %>" 
                             alt="<%= item.product ? item.product.productName : 'Product Name' %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.product ? item.product.productName : 'Product Name' %></h5>
                            
                            <% if (item.product.discountPercentage > 0) { %>
                                <p class="original-price" style="text-decoration: line-through; color: gray;">
                                    ₹<%= item.product.Price %>
                                </p>
                                <p class="offer-price" style="color: green; font-weight: bold;">
                                    ₹<%= item.product.finalPrice %>
                                </p>
                                <p class="discount-percentage" style="color: red; font-size: 14px;">
                                    (<%= item.product.discountPercentage %>% Off) 
                                    <%= item.product.discountType === 'product' ? '(Product Discount)' : '(Category Discount)' %>
                                </p>
                            <% } else { %>
                                <p class="offer-price">₹<%= item.product.Price %></p>
                            <% } %>

                            <p class="card-text">Size: <%= item.selectedSize %></p>

                            <div class="button-group">
                                <form action="/addtocart/<%= item.product._id %>" method="POST">
                                    <input type="hidden" name="size" value="<%= item.selectedSize %>">
                                    <input type="hidden" name="price" value="<%= item.product.finalPrice %>">
                                    <input type="hidden" name="discountPercentage" value="<%= item.product.discountPercentage %>">
                                    <input type="hidden" name="discountType" value="<%= item.product.discountType %>">
                                    <button type="submit" class="btn">Add to Cart</button>
                                </form>
                                <form action="/removeWishlist/<%= item.product._id %>/<%= item.selectedSize %>" method="POST">
                                 
                                    <button type="submit" class="btn">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-wishlist">
                
                <h3>Your wishlist is empty</h3>
                <p>Browse our collection and add items you love!</p>
                <a href="/shop" class="btn">Continue Shopping</a>
            </div>
        <% } %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    $(document).ready(function () {

        $(".add-to-wishlist-form").on("submit", function (event) {
            event.preventDefault(); 

            var form = $(this);
            $.post(form.attr("action"), form.serialize(), function (data) {
            

                if (data.success) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Product added to wishlist.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        location.reload(); 
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message || 'You need to be logged in to add items to your wishlist.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            }).fail(function (xhr, status, error) {
                
                Swal.fire({
                    title: 'Error',
                    text: xhr.responseJSON?.message || 'Something went wrong!',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        });

        
     
        <% if (message && message.length > 0) { %>
            Swal.fire({
                text: '<%= message.replace(/'/g, "\\'").replace(/"/g, '\\"') %>',
                icon: 'info',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        <% } %>
    });
    $(document).ready(function () {
     
        <% if (session.alertMessage) { %>
            Swal.fire({
                text: "<%= session.alertMessage.text %>",
                icon: "<%= session.alertMessage.icon %>",
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });

            <%
                delete session.alertMessage;
            %>
        <% } %>
    });
</script>


<%- include('../../views/partials/user/footer') %>