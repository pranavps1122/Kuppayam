<%- include('../../views/partials/user/header') %>

<style>
    .wishlist-container {
        padding: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .wishlist-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-left: 1rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        padding: 0 1rem;
    }

    .wishlist-item {
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        border-radius: 6px;
        overflow: hidden;
        transition: 0.2s;
        height: 100%;
        background: white;
    }

    .wishlist-item:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .wishlist-item img {
        width: 100%;

      
        height: 405px;

        object-fit: cover;
    }

    .card-body {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        margin: 0;
        color: #666;
        font-weight: 500;
    }

    .button-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

    .button-group .btn {
        padding: 0.5rem;
        font-size: 0.9rem;
        border: none;
        background-color: #000;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        transition: 0.2s;
        text-align: center;
    }

    .button-group .btn:hover {
        background-color: #333;
    }

    .empty-wishlist {
        text-align: center;
        padding: 3rem 1.5rem;
        background: white;
        border-radius: 8px;
        margin: 1rem;
    }

    .empty-wishlist img {
        width: 120px;
        margin-bottom: 1rem;
    }

    .empty-wishlist h3 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        color: #333;
    }

    .empty-wishlist p {
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        color: #666;
    }

    .empty-wishlist .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #000;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: 0.2s;
    }

    .empty-wishlist .btn:hover {
        background: #333;
    }

    @media (max-width: 768px) {
        .wishlist-container {
            padding: 1rem;
        }
        
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
            padding: 0 0.5rem;
        }

        .wishlist-item img {
            height: 180px;
        }
    }
</style>

<div class="container-fluid">
    <div class="wishlist-container">
        <h1 class="wishlist-title">My Wishlist</h1>

        <% if (wishlistItems && wishlistItems.length > 0) { %>
            <div class="products-grid">
                <% wishlistItems.forEach(item => { %>
                    <div class="wishlist-item">
                        <img src="/<%= item.productId.productImage[0] %>" alt="<%= item.productName %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.productId.productName %></h5>
                            <p class="card-text">â‚¹<%= item.productId.Price %></p>
                            <p class="card-text"><%= item.selectedSize %></p>

                            <div class="button-group">
                                <a href="/addtocart/<%= item.productId._id %>"><button class="btn" >Add to Cart</button>
                                <a href="/removeWishlist/<%= item.productId._id %>"><button class="btn">Remove</button></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-wishlist">
                <img src="/images/empty-wishlist.svg" alt="Empty Wishlist">
                <h3>Your wishlist is empty</h3>
                <p>Browse our collection and add items you love!</p>
                <a href="/shop" class="btn">Continue Shopping</a>
            </div>
        <% } %>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<% if (message) { %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                text: '<%= message %>',
                icon: 'error',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        });
    </script>
<% } %>

<%- include('../../views/partials/user/footer') %>