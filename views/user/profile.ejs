<%- include('../partials/user/header') %>
<%- include('../partials/user/sidebar-styles') %>

<style>
    :root {
        --primary-color: #4f46e5;
        --primary-light: #c7d2fe;
        --secondary-color: #10b981;
        --accent-light: #f0fdfa;
        --dark-text: #1e293b;
        --light-text: #64748b;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --card-hover-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, #818cf8 100%);
        --gradient-secondary: linear-gradient(135deg, var(--secondary-color) 0%, #0ea5e9 100%);
    }

    .page-container {
        background-color: #f1f5f9;
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    .main-content {
        padding: 2rem;
        margin-top: -80px;
        position: relative;
        z-index: 10;
        width: 100%;
    }

    .profile-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .content-section {
        background: white;
        border-radius: 16px;
        padding: 0;
        box-shadow: var(--card-shadow);
        margin-bottom: 2rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .content-section:hover {
        box-shadow: var(--card-hover-shadow);
        transform: translateY(-5px);
    }

    .section-header {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background: var(--gradient-primary);
        color: white;
    }

    #addresses-section .section-header {
        background: var(--gradient-secondary);
    }

    .section-header h2 {
        font-size: 1.4rem;
        font-weight: 600;
        margin: 0;
        color: white;
    }

    .section-header i {
        font-size: 1.2rem;
        margin-right: 0.8rem;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.6rem;
        border-radius: 50%;
    }

    .section-content {
        padding: 1.5rem;
        flex: 1;
    }

    .profile-card {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        color: var(--dark-text);
        margin-bottom: 1rem;
        background: #f8fafc;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .profile-card:hover {
        background: var(--accent-light);
    }

    .profile-avatar {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        margin-right: 1.5rem;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        margin-left: 10px;
        color: var(--dark-text);
    }

    .profile-email {
        color: var(--light-text);
        margin-left: 10px;
        font-size: 0.9rem;
    }

    .detail-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.2rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
        margin-bottom: 1.5rem;
    }

    .detail-section:hover {
        background: var(--accent-light);
    }

    .detail-section h3 {
        color: var(--dark-text);
        margin-bottom: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .detail-section h3 i {
        margin-right: 0.5rem;
        color: var(--primary-color);
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 0.6rem 0;
        border-bottom: 1px solid #e2e8f0;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

    .detail-item:last-child {
        border-bottom: none;
    }

    .detail-item:hover {
        background-color: rgba(79, 70, 229, 0.05);
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        border-radius: 4px;
    }

    .detail-label {
        color: var(--light-text);
        font-weight: 500;
    }

    .detail-value {
        font-weight: 500;
        color: var(--dark-text);
    }

    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .btn-edit-profile {
        display: inline-flex;
        align-items: center;
        padding: 0.6rem 1.2rem;
        background: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.2);
        flex: 1;
        justify-content: center;
        min-width: 140px;
    }

    .btn-edit-profile:hover {
        background: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.3);
    }

    .btn-edit-profile i {
        margin-right: 0.5rem;
    }

    .address-list {
        list-style: none;
        padding: 0;
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }

    .address-item {
        background: #f8fafc;
        padding: 1.2rem;
        border-radius: 12px;
        font-size: 0.95rem;
        line-height: 1.5;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .address-item:hover {
        background: var(--accent-light);
        transform: translateY(-3px);
        box-shadow: var(--card-shadow);
    }

    .address-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--secondary-color);
    }

    .address-type {
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }
    
    .address-type i {
        margin-right: 0.5rem;
        font-size: 1rem;
    }

    .address-content {
        padding-left: 0.5rem;
        color: var(--dark-text);
        flex: 1;
    }

    .address-actions {
        display: flex;
        gap: 0.6rem;
        margin-top: 1rem;
        padding-top: 0.8rem;
        border-top: 1px solid #e2e8f0;
    }

    .btn-edit, .btn-delete {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: var(--primary-color);
        color: white;
        flex: 1;
        justify-content: center;
    }

    .btn-edit:hover {
        background: #4338ca;
    }

    .btn-delete {
        background: #fff;
        color: #ef4444;
        border: 1px solid #ef4444;
    }

    .btn-delete:hover {
        background: #ef4444;
        color: white;
    }

    .btn-edit i, .btn-delete i {
        margin-right: 0.4rem;
    }

    .add-address-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: var(--secondary-color);
        color: white;
        padding: 0.7rem 1.2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        margin-top: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.2);
    }

    .add-address-btn:hover {
        background: #0d9488;
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.3);
    }

    .add-address-btn i {
        margin-right: 0.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: var(--light-text);
        background: #f8fafc;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
        color: var(--secondary-color);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-animation {
        animation: fadeIn 0.6s ease-out forwards;
    }

    .stagger-item:nth-child(1) { animation-delay: 0.1s; }
    .stagger-item:nth-child(2) { animation-delay: 0.2s; }
    .stagger-item:nth-child(3) { animation-delay: 0.3s; }
    .stagger-item:nth-child(4) { animation-delay: 0.4s; }

    /* Card design improvements */
    .content-section {
        position: relative;
    }
    
    .content-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: var(--gradient-primary);
    }

    #addresses-section::after {
        background: var(--gradient-secondary);
    }

    /* Comprehensive Mobile Responsiveness */
    @media (min-width: 992px) {
        .profile-wrapper {
            grid-template-columns: 1fr 1fr;
        }
    }

    /* Large tablet breakpoint */
    @media (max-width: 991px) {
        .profile-wrapper {
            grid-template-columns: 1fr;
        }
        
        .main-content {
            margin-top: -60px;
        }
    }

    /* Medium tablet breakpoint */
    @media (max-width: 768px) {
        .main-content {
            padding: 1.5rem;
            margin-top: -50px;
        }
        
        .section-header h2 {
            font-size: 1.3rem;
        }
        
        .profile-name {
            font-size: 1.4rem;
        }
        
        .address-list {
            grid-template-columns: 1fr;
        }
    }

    /* Small tablet and large mobile breakpoint */
    @media (max-width: 640px) {
        .main-content {
            padding: 1.25rem;
            margin-top: -40px;
        }
        
        .section-content {
            padding: 1.25rem;
        }
        
        .profile-card {
            padding: 1.25rem;
        }
        
        .detail-section {
            padding: 1rem;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .btn-edit-profile {
            width: 100%;
        }
    }

    /* Mobile breakpoint */
    @media (max-width: 480px) {
        .main-content {
            padding: 1rem;
            margin-top: -30px;
            margin-left: -100px;
        }
        
        .section-content {
            padding: 1rem;
        }
        
        .profile-card {
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 1rem;
        }
        
        .profile-avatar {
            margin-right: 0;
            margin-bottom: 1rem;
            width: 80px;
            height: 80px;
            font-size: 2rem;
        }
        
        .profile-info {
            text-align: center;
        }
        
        .profile-name, .profile-email {
            margin-left: 0;
        }
        
        .detail-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.3rem;
        }
        
        .detail-value {
            width: 100%;
            word-break: break-word;
        }
        
        .section-header {
            padding: 1rem;
        }
        
        .section-header i {
            padding: 0.5rem;
            font-size: 1rem;
        }
        
        .address-item {
            padding: 1rem;
        }
        
        .address-actions {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .btn-edit, .btn-delete {
            width: 100%;
            justify-content: center;
        }
        
        .add-address-btn {
            width: 100%;
            text-align: center;
        }
        
        .empty-state {
            padding: 1rem;
        }
        
        .empty-state i {
            font-size: 2.5rem;
        }
    }
    
    /* Extra small mobile breakpoint */
    @media (max-width: 360px) {
        .main-content {
            padding: 0.75rem;
            margin-left: -100px;
        }
        
        .section-content {
            padding: 0.75rem;
        }
        
        .profile-card {
            padding: 0.75rem;
        }
        
        .profile-name {
            font-size: 1.3rem;
        }
        
        .profile-avatar {
            width: 70px;
            height: 70px;
        }
        
        .detail-section h3 {
            font-size: 1rem;
        }
        
        .detail-item {
            font-size: 0.9rem;
        }
        
        .btn-edit-profile, .btn-edit, .btn-delete, .add-address-btn {
            font-size: 0.8rem;
            padding: 0.6rem 0.8rem;
        }
    }
</style>

<div class="page-container">
    <%- include('../partials/user/sidebar-styles') %>
    <%- include('../partials/user/sidebar', { user, active: 'profile' }) %>
    
    <main class="main-content">
        <div class="profile-wrapper">
            <div id="profile-section" class="content-section page-animation">
                <div class="section-header">
                    <i class="fas fa-user-circle"></i>
                    <h2>My Profile</h2>
                </div>
                
                <div class="section-content">
                    <div class="profile-card">
                        <div class="profile-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="profile-info">
                            <div class="profile-name"><%= user.name %></div>
                            <div class="profile-email"><%= user.email %></div>
                        </div>
                    </div>

                    <div class="profile-details">
                        <div class="detail-section stagger-item">
                            <h3><i class="fas fa-address-card"></i> Contact Information</h3>
                            <div class="detail-item">
                                <div class="detail-label">Full Name</div>
                                <div class="detail-value"><%= user.name %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Phone Number</div>
                                <div class="detail-value"><%= user.phone %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Email Address</div>
                                <div class="detail-value"><%= user.email %></div>
                            </div>
                        </div>
                        <div class="action-buttons stagger-item">
                            <a href="/editprofile" class="btn-edit-profile">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                            <a href="/resetpassword" class="btn-edit-profile">
                                <i class="fas fa-key"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div id="addresses-section" class="content-section page-animation">
                <div class="section-header">
                    <i class="fas fa-map-marker-alt"></i>
                    <h2>My Addresses</h2>
                </div>
                
                <div class="section-content">
                    <% if (address && address.length > 0) { %>
                        <ul class="address-list">
                            <% address.forEach((address, index) => { 
                                // Alternate between home and work for demonstration
                                const addressType = index % 2 === 0 ? 'Home' : 'Work';
                                const addressIcon = index % 2 === 0 ? 'fa-home' : 'fa-briefcase';
                            %>
                                <li class="address-item stagger-item">
                                    <div class="address-type">
                                        <i class="fas <%= addressIcon %>"></i> <%= addressType %> Address
                                    </div>
                                    <div class="address-content">
                                        <%= address.street %>, <br>
                                        <%= address.city %>, 
                                        <%= address.state %> <%= address.postalCode %>, <br>
                                        <%= address.country %>
                                    </div>
                                    <div class="address-actions">
                                        <a href="/editaddress/<%= address._id %>" class="btn-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/deleteaddress/<%= address._id %>" class="btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </li>
                            <% }); %>
                        </ul>
                        <a href="/Address" class="add-address-btn">
                            <i class="fas fa-plus-circle"></i> Add New Address
                        </a>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-map-marked-alt"></i>
                            <p>You haven't added any addresses yet.</p>
                            <a href="/Address" class="add-address-btn">
                                <i class="fas fa-plus-circle"></i> Add Your First Address
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    // Add interaction for cards and elements
    document.addEventListener('DOMContentLoaded', function() {
        // Address items hover effect - only apply on devices that support hover
        const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
        
        if (!isTouchDevice) {
            const addressItems = document.querySelectorAll('.address-item');
            addressItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Detail items hover effect
            const detailItems = document.querySelectorAll('.detail-item');
            detailItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.paddingLeft = '0.5rem';
                    this.style.paddingRight = '0.5rem';
                    this.style.backgroundColor = 'rgba(79, 70, 229, 0.05)';
                    this.style.borderRadius = '4px';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.paddingLeft = '0';
                    this.style.paddingRight = '0';
                    this.style.backgroundColor = 'transparent';
                });
            });
        }
    });
</script>

<%- include('../partials/user/footer') %>