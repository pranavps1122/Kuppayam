    display: block;
    transition: background-color 0.3s ease;
   margin-right:0%
}

.search-toggle:hover {
    background-color: #2d3b49;
}

.search-toggle:focus {
    outline: none;
}

.search-form.visible {
    opacity: 1;
    visibility: visible;
    transition: opacity 0.3s ease;
}
.original-price {
    text-decoration: line-through;
    color: #ff0000;
    margin-right: 10px;
}

.discount-price {
    font-weight: bold;
    color: rgb(0, 0, 0);
}

.discount-percentage {
    color: rgb(255, 0, 0);
    font-size: 1em;
