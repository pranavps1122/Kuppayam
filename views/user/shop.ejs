    font-size: 14px;
    outline: none;
    transition: border-color 0.3s ease;
    
}

.search-form input:focus {
    border-color: #007BFF;
}

.search-form button {
    background-color: #2d3b49;
    color: white;
    padding: 8px 12px;
    border: none;
    border-radius: 20px;
    font-size: 14px;
    cursor: pointer;
    margin-left: 8px;
    transition: background-color 0.3s ease;
}

.search-form button:hover {
    background-color: #2d3b49;
}

.search-form button:focus {
