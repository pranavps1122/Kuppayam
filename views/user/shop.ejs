</style>



    <%-include('../../views/partials/user/header')%>

    <main class="shop-container">
        <!-- Sidebar Filters -->
        <aside class="filters">
            <section class="filter-group">
                <h3>Categories</h3>
                <ul class="filter-list">
                    <li><a href="?category=all&sort=<%= selectedSort %>" class="<%= selectedCategory === 'all' ? 'active' : '' %>">All</a></li>
                    <li><a href="?category=Mens&sort=<%= selectedSort %>" class="<%= selectedCategory === 'Mens' ? 'active' : '' %>">Men</a></li>
                    <li><a href="?category=Women&sort=<%= selectedSort %>" class="<%= selectedCategory === 'Women' ? 'active' : '' %>">Women</a></li>
                    <li><a href="?category=Kids&sort=<%= selectedSort %>" class="<%= selectedCategory === 'Kids' ? 'active' : '' %>">Kids</a></li>
                </ul>
            </section>
        </aside>
    
        <!-- Products Section -->
        <section class="products-section">
            <button class="search-toggle">Search</button>
                <form method="GET" class="search-form hidden">
                    <input type="text" name="search" placeholder="Search for products...">
                    <button type="submit">Go</button>
                </form>
            <div class="products-header">

                
                

                <h1 class="product-bar">
                    <% if (selectedCategory === 'all') { %>
                        All Products
                    <% } else { %>
                        <%= selectedCategory.charAt(0).toUpperCase() + selectedCategory.slice(1) %> Products
                    <% } %>
                </h1>
                <select class="sort-select" onchange="window.location.href=this.value">
                    <option value="?category=<%= selectedCategory %>&sort=Az" <%= selectedSort === 'Az' ? 'selected' : '' %>>A to Z</option>
                    <option value="?category=<%= selectedCategory %>&sort=Za" <%= selectedSort === 'Za' ? 'selected' : '' %>>Z to A</option>
                    <option value="?category=<%= selectedCategory %>&sort=lowtohigh" <%= selectedSort === 'lowtohigh' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="?category=<%= selectedCategory %>&sort=hightolow" <%= selectedSort === 'hightolow' ? 'selected' : '' %>>Price: High to Low</option>
                </select>
            </div>
    
            <div class="products-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <a href="/productDetail/<%= product._id %>" style="text-decoration: none; color: black;">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="/<%= product.productImage[0] %>" alt="<%= product.productName %>"
                                        style='<% if (product.quantity <= 0 || product.isActive === false) { %>opacity: 0.5;<% } %>'>
                                    <button class="quick-add" data-product-id="<%= product._id %>">Quick Add</button>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name">
                                        <%= product.productName %>
                                    </h3>
            
                                    <% if (product.discountAmount > 0) { %>
                                        <p class="price">
                                            <span class="original-price">₹<%= product.Price %></span>
                                            <span class="discount-price">₹<%= product.finalPrice %></span>
                                        </p>
                                        <p class="discount-percentage"><%= product.discountPercentage%>% off</p>
                                    <% } else { %>
                                        <p class="price">₹<%= product.Price %></p>
                                    <% } %>
            
                                    <h3>
                                        <% if (product.quantity <= 0) { %>
                                            <span style="color: red;">(Out of Stock)</span>
                                        <% } else if (product.isActive === false) { %>
                                            <span style="color: red;">( Not Available)</span>
                                        <% } %>
                                    </h3>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                <% } else { %>
                    <p>No products available.</p>
                <% } %>
            </div>
            
    
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&sort=<%= selectedSort %>" class="pagination-link">&laquo; Previous</a>
                <% } %>
    
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>&category=<%= selectedCategory %>&sort=<%= selectedSort %>"
                        class="pagination-link <%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                <% } %>
    
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&sort=<%= selectedSort %>" class="pagination-link">Next &raquo;</a>
                <% } %>
            </div>
        </section>
    </main>
    
    <script>
      
        document.querySelectorAll('.size-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                btn.classList.toggle('active');
                
            });
        });
    
       
        const priceSlider = document.querySelector('.price-slider');
        const minInput = document.querySelector('.price-inputs input:first-child');
        const maxInput = document.querySelector('.price-inputs input:last-child');
    
        if (priceSlider && minInput && maxInput) {
            priceSlider.addEventListener('input', (e) => {
                maxInput.value = e.target.value;
            });
        }


             const searchButton = document.querySelector('.search-toggle');
            const searchForm = document.querySelector('.search-form');

            searchButton.addEventListener('click', () => {
                searchForm.classList.toggle('visible');
            });

    </script>
    
