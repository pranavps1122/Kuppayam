    function selectAddress(card, addressId) {
    document.querySelectorAll('.address-card').forEach(c => {
        c.classList.remove('selected');
    });
    
    card.classList.add('selected');
    
    card.querySelector('input[type="radio"]').checked = true;
    
    document.getElementById('newAddressForm').classList.remove('active');
}

function toggleNewAddressForm() {
    const form = document.getElementById('newAddressForm');
    form.classList.toggle('active');
    
    document.querySelectorAll('.address-card').forEach(card => {
        card.classList.remove('selected');
        card.querySelector('input[type="radio"]').checked = false;
    });
}


function initializeRazorpay(orderId, amount) {
    const options = {
        key: '<%= process.env.key_id %>', 
        amount: amount * 100, 
        currency: 'INR',
        name: 'Kuppayam',
        description: 'Purchase Payment',
        order_id: orderId,
        handler: function(response) {
         
            fetch('/verify-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    razorpay_payment_id: response.razorpay_payment_id,
                    razorpay_order_id: response.razorpay_order_id,
                    razorpay_signature: response.razorpay_signature,
                    addressId: document.querySelector('input[name="addressId"]:checked').value
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/ordersuccess';
                } else {
                    window.location.href = '/orderDetails';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Payment verification failed. Please try again.');
            });
        },
        prefill: {
            name: '<%= user?.name %>',
            email: '<%= user?.email %>',
        },
        theme: {
            color: '#2962ff'
        }
    };

    const rzp = new Razorpay(options);

    
    rzp.on('payment.failed', function(response) {
        console.error('Payment failed:', response.error);

        
        fetch('/payment-failed', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                razorpay_order_id: response.error.metadata.order_id,
                razorpay_payment_id: response.error.metadata.payment_id,
                error_code: response.error.code,
                error_description: response.error.description,
                addressId: document.querySelector('input[name="addressId"]:checked').value
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/orderDetails';
            } else {
                alert('Failed to save payment failure details.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to save payment failure details.');
        });
    });

    rzp.open();
}


document.querySelector('.checkout-form').addEventListener('submit', async function (event) {
    event.preventDefault();

    const addressId = document.querySelector('input[name="addressId"]:checked').value;
    const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

    if (paymentMethod === 'online') {
        try {
            const response = await fetch('/initiate-razorpay', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ addressId })
            });
            const data = await response.json();
            
            if (data.success) {
                initializeRazorpay(data.order.id, data.order.amount);
            } else {
                alert('Failed to initiate payment');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to initiate payment');
        }
    } else {
        this.submit();
    }
});

const couponSystem = {
    init() {
        this.setupCouponForm();
        this.setupRemoveCouponButton();
    },

    setupCouponForm() {
        const couponForm = document.createElement('form');
        couponForm.id = 'couponForm';
        couponForm.className = 'coupon-form';
        couponForm.innerHTML = `
            <div class="coupon-input-group">
                <input type="text" 
                    name="couponCode" 
                    id="couponCode" 
                    placeholder="Enter coupon code"
                    required
                >
                <button type="submit" class="apply-coupon">Apply Coupon</button>
            </div>
            <p class="coupon-message" id="couponMessage"></p>
        `;

        
        const placeOrderSection = document.querySelector('.place-order');
        placeOrderSection.parentNode.insertBefore(couponForm, placeOrderSection);

      
        couponForm.addEventListener('submit', (e) => this.handleCouponSubmit(e));
    },

    setupRemoveCouponButton() {
        const removeCouponForm = document.getElementById('removeCouponForm');
        if (removeCouponForm) {
        
            removeCouponForm.addEventListener('submit', (e) => this.handleRemoveCoupon(e));
        }
    },

    async handleCouponSubmit(e) {
        e.preventDefault();
        const couponCode = document.getElementById('couponCode').value;
        const messageElement = document.getElementById('couponMessage');
        
        try {
            const response = await fetch('/apply-coupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ couponCode })
            });

            const data = await response.json();

            if (data.success) {
         
                Swal.fire({
                    text: `Coupon applied successfully! You saved ₹${data.discount}`,
                    icon: 'success',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                
               
                document.getElementById('totalAmount').textContent = data.newTotal;
                document.getElementById('appliedCoupon').textContent = couponCode;
                document.getElementById('removeCouponForm').style.display = 'block';
                document.getElementById('couponCode').value = '';
                document.getElementById('couponCode').disabled = true;
            } else {
             
                Swal.fire({
                    text: data.message || 'Invalid coupon code',
                    icon: 'error',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
            }
        } catch (error) {
            Swal.fire({
                text: 'Error applying coupon',
                icon: 'error',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
        }
    },

    async handleRemoveCoupon(e) {
        e.preventDefault();
        
        try {
            const response = await fetch('/remove-coupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            const data = await response.json();

            if (data.success) {
             
                Swal.fire({
                    text: 'Coupon removed successfully',
                    icon: 'success',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

               
                document.getElementById('appliedCoupon').textContent = '';
                document.getElementById('couponMessage').textContent = '';
                document.getElementById('totalAmount').textContent = data.newTotal;
                document.getElementById('couponCode').disabled = false;
                document.getElementById('removeCouponForm').style.display = 'none';
            }
        } catch (error) {
            Swal.fire({
                text: 'Error removing coupon',
                icon: 'error',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
        }
    }
};


