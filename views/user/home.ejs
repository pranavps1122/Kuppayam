

<%-include('../../views/partials/user/header')%>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>FIND CLOTHES THAT MATCH YOUR STYLE</h1>
            <button class="shop-now">Shop Now</button>
        </div>
        <div class="stats">
            <div class="stat-item">200+ International Brands</div>
            <div class="stat-item">2,000+ High-Quality Products</div>
            <div class="stat-item">10,000+ Happy Customers</div>
        </div>
    </section>


    <!-- New Arrivals -->
    <section class="product-section">
        <h2>NEW ARRIVALS</h2>
        <div class="product-grid">
        
            <% products.forEach(product => { %>
                <a href="/productDetail/<%= product._id %>" style="text-decoration: none; color: black;" >
                <div class="product-card">
                    <div class="product-image" >
                        <p><%= product.productImage[0]%></p>
                        
                     <img src="<%= product.productImage[0]%>" alt="<%= product.productName %>" onerror="this.onerror=null;this.src='https://th.bing.com/th/id/OIP.7cRYFyLoDEDh4sRtM73vvwHaDg?rs=1&pid=ImgDetMain';">

                        
                    </div>
                    <h3><%= product.productName %></h3>
                    <div class="price">
                        <span class="sale-price">₹<%= product.salePrice %></span>
                        <span class="original-price">₹<%= product.regularPrice %></span>
                    </div>
                </div>
               </a>
            <% }) %>
        </div>
    </section>

    <section class="product-section">
    <h2>TOP SELLING</h2>
    <div class="product-grid">
        <% const topSelling = [
            { name: 'Green Sport Set', price: 150, sale: 130, image: '/Assets/5.webp.webp' },
            { name: 'Orange Sports Tee', price: 160, sale: 140, image: '/Assets/5.webp' },
            { name: 'Denim Shorts', price: 180, sale: 160, image: '/Assets/7.webp.webp' },
            { name: 'Track Pants', price: 170, sale: 150, image: '/Assets/7.webp' }
        ]; %>
        <% topSelling.forEach(product => { %>
           <a href="/productDetail/<%= product._id %>" style="text-decoration: none; color: black;">
            <div class="product-card" >
                <div class="product-image">
                    <!-- Dynamically set the image for each product -->
                    <img src="<%= product.image %>" alt="<%= product.name %>" onerror="this.onerror=null;this.src='/assets/fallback-image.webp';">
                </div>
                <h3><%= product.name %></h3>
                <div class="price">
                    <span class="sale-price">₹<%= product.sale %></span>
                    <span class="original-price">₹<%= product.price %></span>
                </div>
                
            </div>
        </a>
        <% }) %>
    </div>
</section>


<!-- Browse by Style -->
<section class="browse-style">
    <h2 class="br">BROWSE BY CATEGORY</h2>
    <div class="style-grid">
        <% 
            const styles = [
                { name: 'Mens', image: '/Assets/999.webp' },
                { name: 'Women', image: '/Assets/111.webp' },
                { name: 'Kids', image: '/Assets/22.webp' }
            ]; 
        %>
        <% styles.forEach(style => { %>
            <div class="style-card">
                <img src="<%= style.image %>" alt="<%= style.name %>" class="style-image">
                <h3><%= style.name %></h3>
            </div>
        <% }) %>
    </div>
</section>


    <!-- Customer Reviews -->
    <section class="reviews">
        <h2>OUR HAPPY CUSTOMERS</h2>
        <div class="reviews-grid">
            <% const reviews = [
                { name: 'Sarah M.', rating: 5, text: 'Great quality products and fast shipping!' },
                { name: 'John D.', rating: 5, text: 'Excellent customer service and amazing collection.' },
                { name: 'Lisa R.', rating: 5, text: 'Love the variety and style options available.' }
            ] %>
            <% reviews.forEach(review => { %>
                <div class="review-card">
                    <div class="rating">★★★★★</div>
                    <p><%= review.text %></p>
                    <h4><%= review.name %></h4>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="newsletter">
        <h2>STAY UP TO DATE ABOUT OUR LATEST OFFERS</h2>
        <form class="subscribe-form">
            <input type="email" placeholder="Enter your email address" required>
            <button type="submit">Subscribe</button>
        </form>
    </section>



 


   <%-include('../../views/partials/user/footer')%>